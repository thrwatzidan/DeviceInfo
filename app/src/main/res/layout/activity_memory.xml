<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="2dp">

 <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            app:cardCornerRadius="3dp"
            app:cardBackgroundColor="@color/colorWhite">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:stretchColumns="1">


                <TableRow>

                    <TextView
                        android:text="RAM"
                        android:padding="5dp"
                        android:background="@color/colorGray"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_span="2"
                        />

                </TableRow>
<TableRow>
<RelativeLayout

    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:layout_span="3"
    android:layout_gravity="center"
    >

    <ProgressBar
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/pbRam"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/progressbar_states"
        android:foregroundGravity="center_horizontal"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_perc_ram"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:layout_centerInParent="true"/>
</RelativeLayout>
</TableRow>
                <TableRow>
                    <TextView
                        android:text="Free"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:id="@+id/freeRam"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Used"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:id="@+id/usedRam"
                        android:textSize="20sp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Total"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:id="@+id/totalRam"
                        android:textSize="20sp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </TableRow>

            </TableLayout>








        </androidx.cardview.widget.CardView>


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp"
    app:cardCornerRadius="3dp"
    app:cardBackgroundColor="@color/colorWhite">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:stretchColumns="1">

        <TableRow>
<TextView
    android:text="ROM"
    android:padding="5dp"
    android:background="@color/colorGray"
    android:textSize="20sp"
    android:textStyle="bold"
    android:textColor="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_span="2"
    />
        </TableRow>
<TableRow>
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:layout_span="3"
       >

       <ProgressBar
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:id="@+id/pbRom"
           style="@android:style/Widget.ProgressBar.Horizontal"
           android:progressDrawable="@drawable/progressbar_states"
           android:foregroundGravity="center_horizontal"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tv_perc_rom"
           android:textSize="20sp"
           android:textColor="@color/colorBlack"
           android:layout_centerInParent="true"/>

   </RelativeLayout>


</TableRow>

        <TableRow>

<TextView

    android:text="Free"
    android:textSize="20sp"
    android:textColor="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />

            <TextView

                android:id="@+id/freeRom"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </TableRow>

        <TableRow>

            <TextView

                android:text="Used"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView

                android:id="@+id/usedRom"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </TableRow>

        <TableRow>

            <TextView

                android:text="Total"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView

                android:id="@+id/totalRom"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </TableRow>


    </TableLayout>





</androidx.cardview.widget.CardView>

 <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="3dp"
            app:cardCornerRadius="3dp"
            app:cardBackgroundColor="@color/colorWhite">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:stretchColumns="1">
<TableRow>

    <TextView
        android:text="Java Heap"
        android:padding="5dp"
        android:background="@color/colorGray"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_span="2"
        />
</TableRow>
          <TableRow>
<TextView
    android:text="Total"
    android:textSize="20sp"
    android:textColor="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />
              <TextView
                  android:textSize="20sp"
                  android:id="@+id/totalHeap"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  />
          </TableRow>
            </TableLayout>




        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>